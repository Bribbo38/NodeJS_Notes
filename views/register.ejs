<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', { title: 'Register Page' }) %>

    <body class="bg-base-300 flex flex-col min-h-screen">
        <%- include('partials/header') %>

            <main class="flex-grow flex items-center justify-center text-center min-h-screen">
                <div class="bg-base-100 py-5 px-16 rounded-lg shadow-lg max-w-m mx-auto">
                    <h1 class="text-4xl font-bold text-blue-500 mb-6">Register</h1>

                    <form action="/register" method="POST">
                        <!-- Name Field -->
                        <div class="form-control mb-4">
                            <label class="label">
                                <span class="label-text">Name</span>
                            </label>
                            <input type="text" name="name" placeholder="Name" class="input input-bordered w-full"
                                required />
                        </div>

                        <!-- Surname Field -->
                        <div class="form-control mb-4">
                            <label class="label">
                                <span class="label-text">Surname</span>
                            </label>
                            <input type="text" name="surname" placeholder="Surname" class="input input-bordered w-full"
                                required />
                        </div>

                        <!-- Email Field -->
                        <div class="form-control mb-4">
                            <label class="label">
                                <span class="label-text">Email</span>
                            </label>
                            <input type="email" name="email" placeholder="Email" class="input input-bordered w-full"
                                required />
                        </div>

                        <!-- Password Field -->
                        <div class="form-control mb-4">
                            <label class="label">
                                <span class="label-text">Password</span>
                            </label>
                            <input type="password" name="password" placeholder="Password"
                                class="input input-bordered w-full" required />
                        </div>

                        <!-- Confirm Password Field -->
                        <div class="form-control mb-6">
                            <label class="label">
                                <span class="label-text">Confirm Password</span>
                            </label>
                            <input type="password" name="confirmPassword" placeholder="Confirm Password"
                                class="input input-bordered w-full" required />
                        </div>

                        <% if (typeof error !=='undefined' && error) { %>
                            <p class="text-red-500 text-center mb-4">
                                <%= error %>
                            </p>
                            <% } %>

                                <div class="form-control mt-4">
                                    <button type="submit" class="btn btn-primary w-full">Register</button>
                                </div>

                                <div class="mt-4 text-center">
                                    <p>Already have an account? <a href="/login"
                                            class="text-blue-500 hover:text-blue-700">Login</a></p>
                                </div>
                    </form>
                </div>
            </main>

            <%- include('partials/footer') %>

    </body>

</html>